<%# Prepend the new study group %>
<%= turbo_stream.prepend "study_groups_items" do %>
  <%= render partial: "study_groups/study_group", locals: { study_group: @study_group, current_student_id: current_student_id } %>
<% end %>

<%# Remove empty state if it exists %>
<%= turbo_stream.remove "empty_state" %>

<%# Restore the create button %>
<%= turbo_stream.update "new_group_form" do %>
  <%= render "study_groups/create_button", course: @course %>
<% end %>
