<% if turbo_frame_request? %>
  <turbo-frame id="course_<%= @study_group.course.course_id %>_details">
    <%= render "study_groups/detail_body", study_group: @study_group, members: @members %>
  </turbo-frame>
<% else %>
  <div class="min-h-screen flex items-start bg-gradient-to-br from-primary-900 via-secondary-900 to-tertiary-800 text-slate-100">
    <div class="container mx-auto px-4 pt-20 pb-10 max-w-5xl">
      <div id="flash_messages" class="mb-4"></div>

      <%= render "study_groups/detail_body", study_group: @study_group, members: @members %>
    </div>
  </div>
<% end %>

