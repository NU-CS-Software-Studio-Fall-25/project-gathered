      <%= render "study_groups/create_button", course: course %>
    </turbo-frame>
  </div>

  <div id="study_groups_list" class="space-y-3">
    <% study_groups.each do |study_group| %>
      <%= render partial: "study_groups/study_group", locals: { study_group: study_group } %>
