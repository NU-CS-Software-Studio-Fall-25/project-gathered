<% if params[:partial] %>
  <%= render partial: "study_groups/list", locals: { course: @course, study_groups: @study_groups, current_student_id: current_student_id } %>
<% else %>
  <div class="min-h-screen flex items-start bg-gradient-to-br from-primary-900 via-secondary-900 to-tertiary-800 text-slate-100">
    <div class="container mx-auto px-4 pt-20 mb-10">
      <div id="flash_messages" class="flash-container"></div>

      <div class="mb-8 text-center">
        <h1 class="text-2xl font-bold text-white mb-4"><%= @course.course_name %></h1>
        <div class="flex items-center justify-center gap-4 mb-4">
          <div class="flex items-center gap-2">
            <span class="text-lg">üë®‚Äçüè´</span>
            <p class="text-lg text-slate-300"><%= @course.professor %></p>
          </div>
          <div class="h-8 w-px bg-white/20"></div>
        </div>
        <p class="text-slate-400 mb-4"><%= @course.description %></p>
        
        <% if current_student.courses.include?(@course) %>
          <div class="flex items-center justify-center gap-3">
            <%= link_to "javascript:history.back()", class: "inline-flex items-center gap-2 rounded-md border border-white/20 px-4 py-2 text-sm text-slate-200 hover:bg-white/5 transition" do %>
              <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
              </svg>
              <span>Back</span>
            <% end %>
            <%= button_to student_course_path(@course.course_id), 
                          method: :delete,
                          class: "cursor-pointer inline-flex items-center gap-2 rounded-md border border-danger-500/30 bg-danger-500/10 px-4 py-2 text-sm font-medium text-danger-300 hover:bg-danger-500/20 hover:border-danger-400/30 transition",
                          data: { turbo: false } do %>
              <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
              <span>Leave Course</span>
            <% end %>
          </div>
        <% else %>
          <%= link_to "javascript:history.back()", class: "inline-flex items-center gap-2 rounded-md border border-white/20 px-4 py-2 text-sm text-slate-200 hover:bg-white/5 transition" do %>
            <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
            </svg>
            <span>Back</span>
          <% end %>
        <% end %>
      </div>

      <turbo-frame id="new_group_form" class="new-group-form">
        <!-- Form will load here -->
      </turbo-frame>

      <div id="study_groups_list" class="study-groups-list overflow-y-auto scrollbar-hide" data-controller="study-groups" style="max-height: calc(100vh - 20rem);">
        <%= render partial: "study_groups/list", locals: { course: @course, study_groups: @study_groups, current_student_id: current_student_id } %>
      </div>
    </div>
  </div>
<% end %>

