<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-900 via-indigo-900 to-violet-800 text-slate-100 px-4">
  <div class="relative w-full max-w-md flex flex-col justify-center">
    <!-- Subtle glow background -->
    <div class="pointer-events-none absolute -inset-1 rounded-3xl bg-gradient-to-r from-purple-400/30 via-violet-500/20 to-indigo-400/30 blur-3xl opacity-60"></div>

    <div class="relative rounded-3xl border border-white/15 bg-white/10 backdrop-blur-2xl shadow-2xl p-8 h-136 flex flex-col justify-between">
      <div class="text-center flex flex-col items-center gap-2 flex-shrink-0 pt-8">
        <h1 class="text-3xl font-semibold text-white">Welcome back</h1>
        <p class="text-sm text-slate-300">Sign in to your account</p>
      </div>

      <%= form_with model: @student, url: login_path, local: true,
            class: "flex-1 flex flex-col justify-center items-center gap-4 py-4" do |form| %>

        <div class="w-full max-w-sm space-y-1.5">
          <%= form.label :email, class: "block text-md font-medium text-slate-200" %>
      <%= form.email_field :email,
        class: "block w-full rounded-md border border-white/20 bg-white/10 p-2 text-md text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm",
        placeholder: "Enter your email",
        required: true %>
        </div>

        <div class="w-full max-w-sm space-y-1.5">
          <%= form.label :password, class: "block text-md font-medium text-slate-200" %>
      <%= form.password_field :password,
        class: "block w-full rounded-md border border-white/20 bg-white/10 p-2 text-md text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm",
        placeholder: "Enter your password",
        required: true %>
        </div>

        <div class="w-full max-w-sm pt-2">
          <%= form.submit "Sign In",
                class: "w-full inline-flex items-center justify-center rounded-lg bg-violet-600/90 px-4 py-2.5 text-md font-semibold text-white shadow-md shadow-violet-900/40 hover:bg-violet-500/90 active:bg-violet-600 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:ring-offset-2 focus:ring-offset-purple-950 transition" %>
        </div>
      <% end %>
      
      <div class="flex-shrink-0 flex flex-col items-center gap-3 pb-2">
        <div class="w-full max-w-sm">
          <div class="w-full border-t border-white/15 opacity-70"></div>
        </div>
        <div class="text-center text-xs text-slate-300">
          <p>
            Don't have an account?
            <%= link_to "Sign up",
                  signup_path,
                  class: "font-medium text-violet-300 hover:text-violet-200 hover:underline underline-offset-2 transition" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
