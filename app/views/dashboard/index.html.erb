<div class="min-h-screen flex items-center overflow-hidden justify-center bg-gradient-to-br from-purple-900 via-indigo-900 to-violet-800 text-slate-100">
  <div class="relative w-full max-w-7xl flex justify-center items-center">
    <!-- Subtle glow background -->
    <div class="pointer-events-none absolute -inset-1 rounded-3xl bg-gradient-to-r from-purple-400/30 via-violet-500/20 to-indigo-400/30 blur-3xl opacity-60"></div>

    <div class="relative rounded-3xl border border-white/15 bg-white/10 backdrop-blur-2xl shadow-2xl p-8 w-4/5 h-110 flex flex-col min-h-0">
      <div class="h-1/4 flex flex-col justify-center gap-2">
        <h1 class="text-3xl font-semibold text-white">Welcome back, <%= current_student.name %>!</h1>
        <p class="text-sm text-slate-300">Here's what's happening with your study groups.</p>
      </div>

      <div class="flex flex-col md:flex-row gap-6 flex-grow overflow-hidden h-3/4">
        <!-- My Courses (span 2 cols on large screens) -->
        <div class="lg:col-span-2 flex flex-col w-full md:w-1/2">
          <div class="flex items-center justify-between h-20">
            <h2 class="text-lg font-medium text-white">My Courses</h2>
            <%= link_to "View All Courses", courses_path, class: "inline-flex items-center rounded-md border border-white/20 px-3 py-1.5 text-sm text-slate-100 hover:bg-white/5 transition" %>
          </div>

          <% if @enrolled_courses.any? %>
            <div class="flex flex-col justify-start gap-4 overflow-y-auto h-3/4 pr-1">
              <% @enrolled_courses.each do |course| %>
                <div class="bg-white/5 border border-white/10 rounded-lg p-6">
                  <div class="mb-2">
                    <h3 class="text-md font-semibold text-white"><%= course.course_name %></h3>
                    <p class="text-sm text-slate-300"><%= course.professor %></p>
                  </div>

                  <div class="flex items-center justify-between text-sm text-slate-200">
                    <div>
                      <div class="text-lg font-semibold"><%= course.study_group_count %></div>
                      <div class="text-xs text-slate-400">Study Groups</div>
                    </div>
                    <div>
                      <div class="text-lg font-semibold"><%= course.enrolled_student_count %></div>
                      <div class="text-xs text-slate-400">Students</div>
                    </div>
                    <div>
                      <%= link_to "View Course", course_path(course), class: "inline-flex items-center rounded-md bg-violet-600/90 px-3 py-1.5 text-sm font-semibold text-white shadow-md hover:bg-violet-500/90 transition" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="bg-white/5 rounded-md border border-white/10 p-6 text-center flex flex-col justify-evenly items-center gap-2 h-full">
              <div class="text-4xl">ğŸ“š</div>
              <h3 class="text-lg font-semibold text-white">No Courses Yet</h3>
              <p class="text-sm text-slate-300">You haven't enrolled in any courses yet. Browse available courses to get started!</p>
              <%= link_to "Browse Courses", courses_path, class: "inline-flex items-center rounded-md bg-violet-600/90 px-4 py-2 text-sm font-semibold text-white shadow-md hover:bg-violet-500/90 transition h-10" %>
            </div>
          <% end %>
        </div>

        <!-- Right column: Upcoming & Recent -->
        <div class="flex flex-col w-1/2">
          <div class="h-full flex flex-col justify-start ">
            <div class="flex items-center justify-between h-20">
              <h2 class="text-lg font-medium text-white">Upcoming Study Groups</h2>
              <%= link_to "View All Groups", student_path, class: "inline-flex items-center rounded-md border border-white/20 px-3 py-1.5 text-sm text-slate-100 hover:bg-white/5 transition" %>
            </div>

            <% if @upcoming_study_groups.any? %>
              <div class="space-y-3">
                <% @upcoming_study_groups.each do |study_group| %>
                  <div class="bg-white/5 border border-white/10 rounded-md p-3 flex items-start justify-between">
                    <div>
                      <h4 class="text-sm font-semibold text-white"><%= study_group.topic %></h4>
                      <p class="text-xs text-slate-300"><%= study_group.course.course_name %></p>
                      <div class="text-xs text-slate-400 mt-1">
                        <span class="mr-2">ğŸ“… <%= study_group.formatted_time_range %></span>
                        <% if study_group.location.present? %>
                          <span>ğŸ“ <%= study_group.location %></span>
                        <% end %>
                      </div>
                    </div>
                    <div class="ml-4 flex-shrink-0">
                      <%= link_to "View", study_group_path(study_group), class: "inline-flex items-center rounded-md border border-white/20 px-3 py-1 text-sm text-slate-100 hover:bg-white/5 transition" %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="bg-white/5 rounded-md border border-white/10 p-4 text-sm text-slate-300 text-center h-full flex flex-col justify-center items-center">
                <h3 class="text-lg font-semibold text-white mb-1">No Upcoming Study Groups</h3>
                <div class="mt-3">
                  <%= link_to "Find Study Groups", courses_path, class: "h-10 px-3 py-1.5 inline-flex items-center rounded-md text-sm text-slate-100 font-semibold text-white shadow-md hover:bg-violet-500/90 transition bg-violet-600/90" %>
                </div>
              </div>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
