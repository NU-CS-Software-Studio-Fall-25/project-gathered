<header class="header">
  <div class="header-container">
    <div class="header-brand">
      <%= link_to root_path, class: "brand-link" do %>
        <div class="brand-icon">ðŸ“š</div>
        <span class="brand-text">GatherEd</span>
      <% end %>
    </div>

    <nav class="header-nav">
      <ul class="nav-list">
        <li class="nav-item">
          <%= link_to "Dashboard", dashboard_path, class: "nav-link #{'active' if current_page?(dashboard_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Courses", root_path, class: "nav-link #{'active' if current_page?(root_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Groups", student_path, class: "nav-link #{'active' if current_page?(student_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Profile", edit_student_path, class: "nav-link #{'active' if current_page?(edit_student_path)}" %>
        </li>
      </ul>
    </nav>

    <div class="header-actions">
      <div class="user-menu">
        <div class="user-info">
          <span class="user-name">Hi, <%= current_student&.name || "Student" %></span>
        </div>
        <div class="user-dropdown">
          <%= link_to "Profile", edit_student_path, class: "dropdown-link" %>
          <%= link_to "Logout", logout_path, method: :delete, class: "dropdown-link logout-link", 
                      data: { confirm: "Are you sure you want to logout?", turbo_method: :delete } %>
        </div>
      </div>
    </div>
  </div>
</header>
