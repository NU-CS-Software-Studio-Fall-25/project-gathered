<% type ||= "info" %>
<div class="fixed top-4 right-4 z-50 max-w-sm rounded-lg border border-white/20 bg-white/10 p-4 shadow-lg backdrop-blur-xl transition-all duration-300 <%= type == "error" ? "border-red-500/30 bg-red-950/30" : "border-violet-500/30 bg-violet-950/30" %>" 
     data-controller="flash" 
     data-action="click->flash#dismiss">
  <div class="flex items-center justify-between gap-4">
    <span class="text-sm font-medium <%= type == "error" ? "text-red-200" : "text-violet-200" %>">
      <%= message %>
    </span>
    <button class="rounded-md p-1 hover:bg-white/10 <%= type == "error" ? "text-red-300" : "text-violet-300" %>" 
            data-action="click->flash#dismiss">
      <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
</div>

