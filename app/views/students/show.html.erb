<div class="min-h-screen flex items-start justify-center bg-gradient-to-br from-purple-900 via-indigo-900 to-violet-800 text-slate-100 px-4 pt-20 pb-10">
  <div class="relative w-full max-w-7xl">
    <!-- Subtle glow background -->
    <div class="pointer-events-none absolute -inset-1 rounded-3xl bg-gradient-to-r from-purple-400/30 via-violet-500/20 to-indigo-400/30 blur-3xl opacity-60"></div>

    <div class="relative rounded-3xl border border-white/15 bg-white/10 backdrop-blur-2xl shadow-2xl p-8">
      <div class="mb-8">
        <h1 class="text-3xl font-semibold text-white mb-2">My Study Groups</h1>
        <p class="text-sm text-slate-300">Your active study group memberships</p>
      </div>

      <!-- Study Groups Section -->
      <div>
        <% if current_student.study_groups.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% current_student.study_groups.includes(:course, :creator).each do |study_group| %>
              <div class="bg-white/5 border border-white/10 rounded-lg p-4">
                <div class="mb-3">
                  <h4 class="text-md font-semibold text-white"><%= study_group.topic %></h4>
                  <span class="text-xs text-slate-400"><%= study_group.course.course_name %></span>
                </div>

                <div class="mb-3 pb-3 border-b border-white/5">
                  <div class="flex min-w-0">
                    <span class="min-w-0 flex-1 truncate text-sm text-slate-300"><%= study_group.description %></span>
                  </div>
                  <div class="text-xs text-slate-400 mt-2 space-y-1">
                    <div>ğŸ“… <%= study_group.formatted_time_range %></div>
                    <div>ğŸ“ <%= study_group.location %></div>
                  </div>
                </div>

                <div class="flex gap-2">
                  <%= link_to "View Details", study_group_path(study_group), class: "flex-1 inline-flex items-center justify-center rounded-md border border-white/20 px-3 py-1.5 text-sm text-slate-100 hover:bg-white/5 transition cursor-pointer" %>
                  <%= button_to "Leave",
                                leave_study_group_path(study_group, student_id: current_student.student_id),
                                method: :delete,
                                class: "flex-1 inline-flex items-center justify-center rounded-md bg-red-600/80 px-3 py-1.5 text-sm text-white hover:bg-red-500/80 transition cursor-pointer",
                                form: { data: { turbo: false } } %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-white/5 rounded-lg border border-white/10 p-8 text-center">
            <div class="text-4xl mb-2">ğŸ“š</div>
            <h3 class="text-lg font-semibold text-white mb-1">No Study Groups Yet</h3>
            <p class="text-sm text-slate-300 mb-4">You haven't joined any study groups. Browse courses to find study groups that interest you!</p>
            <%= link_to "Browse Courses", courses_path, class: "inline-flex items-center rounded-md bg-violet-600/90 px-4 py-2 text-sm font-semibold text-white shadow-md hover:bg-violet-500/90 transition cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
