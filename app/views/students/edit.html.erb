<div class="min-h-screen bg-gradient-to-br from-primary-900 via-secondary-900 to-tertiary-800 text-slate-100 flex items-start justify-center pt-20">
  <div class="mx-auto max-w-2xl min-w-xl">
    <!-- Subtle glow background -->
    <div class="pointer-events-none fixed inset-0 bg-gradient-to-r from-primary-400/30 via-tertiary-500/20 to-secondary-400/30 blur-3xl opacity-60"></div>

    <!-- Profile Edit Card -->
    <div class="relative rounded-2xl border border-white/15 bg-white/10 backdrop-blur-2xl shadow-2xl p-6 w-full">
      <div class="mb-4 flex items-start justify-between">
        <div>
          <h1 class="text-2xl font-semibold text-white">Edit Profile</h1>
          <p class="text-sm text-slate-300">Update your account information</p>
        </div>
        <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center text-white font-semibold text-2xl shadow-lg" style="background-color: <%= @student.avatar_color || '#9333ea' %>;" id="avatar-preview">
          <%= @student.name[0].upcase %>
        </div>
      </div>

      <%= form_with model: @student, local: true, class: "space-y-2" do |form| %>
        <% if @student.errors.any? %>
          <div class="bg-white/5 rounded-md border border-white/10 p-3 text-sm text-danger-200">
            <ul>
              <% @student.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-1">
          <%= form.label :name, class: "block text-sm font-medium text-slate-200" %>
          <%= form.text_field :name, class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary-400/70 focus:border-transparent transition shadow-sm", required: true %>
        </div>

        <div class="space-y-1">
          <%= form.label :email, class: "block text-sm font-medium text-slate-200" %>
          <%= form.email_field :email, class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary-400/70 focus:border-transparent transition shadow-sm", required: true %>
        </div>

        <div class="space-y-1">
          <%= form.label :avatar_color, "Avatar Color", class: "block text-sm font-medium text-slate-200" %>
          <div class="flex gap-2 items-center">
            <%= form.color_field :avatar_color, value: @student.avatar_color || '#9333ea', class: "h-10 w-20 rounded-md border border-white/20 bg-white/10 cursor-pointer", id: "avatar-color-input" %>
            <span class="text-sm text-slate-300">Choose a color for your avatar</span>
          </div>
        </div>

        <div class="space-y-1">
          <%= form.label :password, "New Password", class: "block text-sm font-medium text-slate-200" %>
          <%= form.password_field :password, class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary-400/70 focus:border-transparent transition shadow-sm", placeholder: "Leave blank to keep current password" %>
        </div>

        <div class="space-y-1">
          <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-slate-200" %>
          <%= form.password_field :password_confirmation, class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-primary-400/70 focus:border-transparent transition shadow-sm", placeholder: "Confirm new password" %>
        </div>

        <div class="flex gap-3 pt-3">
          <%= form.submit "Update Profile", class: "flex-1 inline-flex items-center justify-center rounded-md bg-tertiary-600/90 px-4 py-2.5 text-sm font-semibold text-white shadow-md hover:bg-tertiary-500/90 transition" %>
          <%= link_to "Cancel", student_path, class: "flex-1 inline-flex items-center justify-center rounded-md border border-white/20 px-4 py-2.5 text-sm text-slate-100 hover:bg-white/5 transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const colorInput = document.getElementById('avatar-color-input');
    const avatarPreview = document.getElementById('avatar-preview');
    
    if (colorInput && avatarPreview) {
      colorInput.addEventListener('input', function(e) {
        avatarPreview.style.backgroundColor = e.target.value;
      });
    }
  });
</script>
