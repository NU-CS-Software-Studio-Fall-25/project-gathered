<div class="min-h-screen bg-gradient-to-br from-purple-900 via-indigo-900 to-violet-800 text-slate-100 flex items-start justify-center pt-20">
  <div class="mx-auto max-w-2xl min-w-xl">
    <!-- Subtle glow background -->
    <div class="pointer-events-none fixed inset-0 bg-gradient-to-r from-purple-400/30 via-violet-500/20 to-indigo-400/30 blur-3xl opacity-60"></div>

    <!-- Profile Edit Card -->
    <div class="relative rounded-2xl border border-white/15 bg-white/10 backdrop-blur-2xl shadow-2xl p-6 w-full">
      <div class="mb-4">
        <h1 class="text-2xl font-semibold text-white">Edit Profile</h1>
        <p class="text-sm text-slate-300">Update your account information</p>
      </div>

      <%= form_with model: @student, local: true, class: "space-y-2" do |form| %>
        <% if @student.errors.any? %>
          <div class="bg-white/5 rounded-md border border-white/10 p-3 text-sm text-rose-200">
            <ul>
              <% @student.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-1">
          <%= form.label :name, class: "block text-sm font-medium text-slate-200" %>
          <%= form.text_field :name, class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm", required: true %>
        </div>

        <div class="space-y-1">
          <%= form.label :email, class: "block text-sm font-medium text-slate-200" %>
          <%= form.email_field :email, class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm", required: true %>
        </div>

        <div class="space-y-1">
          <%= form.label :password, "New Password", class: "block text-sm font-medium text-slate-200" %>
          <%= form.password_field :password, class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm", placeholder: "Leave blank to keep current password" %>
        </div>

        <div class="space-y-1">
          <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-slate-200" %>
          <%= form.password_field :password_confirmation, class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm", placeholder: "Confirm new password" %>
        </div>

        <div class="flex gap-3 pt-3">
          <%= form.submit "Update Profile", class: "flex-1 inline-flex items-center justify-center rounded-md bg-violet-600/90 px-4 py-2.5 text-sm font-semibold text-white shadow-md hover:bg-violet-500/90 transition" %>
          <%= link_to "Cancel", student_path, class: "flex-1 inline-flex items-center justify-center rounded-md border border-white/20 px-4 py-2.5 text-sm text-slate-100 hover:bg-white/5 transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
