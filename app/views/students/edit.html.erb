<div class="min-h-screen bg-gradient-to-br from-purple-900 via-indigo-900 to-violet-800 text-slate-100 flex items-start justify-center pt-20">
  <style>
    @keyframes shine {
      0% { background-position: 200% 0; }
      100% { background-position: -200% 0; }
    }
    @keyframes checkmark-enter {
      0% { opacity: 0; transform: translateY(12px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .shine-once {
      position: relative;
    }
    .shine-once::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: inherit;
      background-image: linear-gradient(
        -45deg,
        rgba(255, 255, 255, 0) 0%,
        rgba(255, 255, 255, 0) 40%,
        rgba(255, 255, 255, 0.1) 50%,
        rgba(255, 255, 255, 0) 60%,
        rgba(255, 255, 255, 0) 100%
      );
      background-size: 200% 200%;
      background-repeat: no-repeat;
      animation: shine 1.5s ease-in-out;
      pointer-events: none;
    }
    .checkmark-animate {
      animation: checkmark-enter .5s ease-out;
    }
  </style>
  <div class="mx-auto max-w-2xl min-w-xl">
    <!-- Subtle glow background -->
    <div class="pointer-events-none fixed inset-0 bg-gradient-to-r from-purple-400/30 via-violet-500/20 to-indigo-400/30 blur-3xl opacity-60"></div>

    <!-- Profile Edit Card -->
    <div class="relative rounded-2xl border border-white/15 bg-white/10 backdrop-blur-2xl shadow-2xl p-6 w-full" data-controller="profile">
      <div class="mb-4 flex items-start justify-between">
        <div>
          <h1 class="text-2xl font-semibold text-white">Edit Profile</h1>
          <p class="text-sm text-slate-300">Update your account information</p>
        </div>
        <div id="avatar-preview-container" class="relative">
          <% if @student.avatar.attached? %>
            <img src="<%= url_for(@student.avatar) %>" alt="Avatar" class="flex-shrink-0 w-16 h-16 rounded-full object-cover shadow-lg" id="avatar-image-preview">
            <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center text-white font-semibold text-2xl shadow-lg hidden" style="background-color: <%= @student.avatar_color || '#9333ea' %>;" id="avatar-color-preview" data-profile-target="avatarColorPreview">
              <%= @student.name[0].upcase %>
            </div>
          <% else %>
            <img src="" alt="Avatar" class="flex-shrink-0 w-16 h-16 rounded-full object-cover shadow-lg hidden" id="avatar-image-preview">
            <div class="flex-shrink-0 w-16 h-16 rounded-full flex items-center justify-center text-white font-semibold text-2xl shadow-lg" style="background-color: <%= @student.avatar_color || '#9333ea' %>;" id="avatar-color-preview" data-profile-target="avatarColorPreview">
              <%= @student.name[0].upcase %>
            </div>
          <% end %>
        </div>
      </div>

      <%= form_with model: @student, local: true, multipart: true, class: "space-y-2" do |form| %>
        <% if @student.errors.any? %>
          <div class="bg-white/5 rounded-md border border-white/10 p-3 text-sm text-rose-200">
            <ul>
              <% @student.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-1">
          <%= form.label :name, class: "block text-sm font-medium text-slate-200" %>
          <%= form.text_field :name, class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm", required: true %>
        </div>

        <div class="space-y-1">
          <%= form.label :email, class: "block text-sm font-medium text-slate-200" %>
          <%= form.email_field :email, class: "block w-full rounded-md border border-white/10 bg-white/5 px-3 py-2 text-sm text-slate-400 cursor-not-allowed", readonly: true, tabindex: -1 %>
          <p class="text-xs text-slate-500">Email cannot be changed</p>
        </div>

        <!-- Avatar Section with Toggle -->
        <div class="space-y-3">
          <label class="block text-sm font-medium text-slate-200">Avatar</label>
          
          <!-- Toggle Tabs -->
          <div class="flex rounded-lg bg-white/5 p-1 border border-white/10">
            <button type="button" 
                    id="avatar-tab-color" 
                    data-action="click->profile#switchToColorTab"
                    data-profile-target="colorTab"
                    class="flex-1 px-4 py-2 text-sm font-medium rounded-md transition <%= @student.avatar.attached? ? 'text-slate-400 hover:text-slate-200' : 'bg-violet-600/70 text-white' %>">
              Color
            </button>
            <button type="button" 
                    id="avatar-tab-image" 
                    data-action="click->profile#switchToImageTab"
                    data-profile-target="imageTab"
                    class="flex-1 px-4 py-2 text-sm font-medium rounded-md transition <%= @student.avatar.attached? ? 'bg-violet-600/70 text-white' : 'text-slate-400 hover:text-slate-200' %>">
              Image
            </button>
          </div>

          <!-- Color Panel -->
          <div id="avatar-color-panel" 
               data-profile-target="colorPanel"
               class="<%= @student.avatar.attached? ? 'hidden' : '' %>">
            <div class="flex gap-2 items-center">
              <%= form.color_field :avatar_color, value: @student.avatar_color || '#9333ea', class: "h-10 w-20 rounded-md border border-white/20 bg-white/10 cursor-pointer", id: "avatar-color-input", data: { action: "input->profile#updateColorPreview", profile_target: "colorInput" } %>
              <span class="text-sm text-slate-300">Choose a color for your avatar</span>
            </div>
          </div>

          <!-- Image Panel -->
          <div id="avatar-image-panel" 
               data-profile-target="imagePanel"
               class="<%= @student.avatar.attached? ? '' : 'hidden' %>">
            <div class="space-y-3">
              <% if @student.avatar.attached? %>
                <div class="flex items-center gap-3 p-3 bg-white/5 rounded-lg border border-white/10">
                  <img src="<%= url_for(@student.avatar) %>" alt="Current avatar" class="w-12 h-12 rounded-full object-cover">
                  <div class="flex-1">
                    <p class="text-sm text-slate-200">Current avatar</p>
                    <p class="text-xs text-slate-400"><%= @student.avatar.filename %></p>
                  </div>
                </div>
              <% end %>
              
              <div class="relative">
                <%= form.file_field :avatar, 
                      accept: ".jpg,.jpeg,.png", 
                      class: "hidden", 
                      id: "avatar-file-input",
                      data: { action: "change->profile#previewImage", profile_target: "fileInput" } %>
                <label for="avatar-file-input" 
                       class="flex items-center justify-center gap-2 w-full px-4 py-3 rounded-lg border-2 border-dashed border-white/20 bg-white/5 hover:bg-white/10 hover:border-violet-400/50 transition cursor-pointer">
                  <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span class="text-sm text-slate-300">Choose an image (JPG or PNG only)</span>
                </label>
              </div>
              
              <!-- Selected file info -->
              <div id="selected-file-info" data-profile-target="selectedFileInfo" class="hidden p-3 bg-white/5 rounded-lg border border-white/10">
                <div class="flex items-center gap-3">
                  <img id="selected-file-preview" data-profile-target="selectedFilePreview" src="" alt="Preview" class="w-12 h-12 rounded-full object-cover">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm text-slate-200 truncate" id="selected-file-name" data-profile-target="selectedFileName"></p>
                    <p class="text-xs text-emerald-400">Ready to upload</p>
                  </div>
                  <button type="button" 
                          data-action="click->profile#clearSelectedFile"
                          class="p-1 text-slate-400 hover:text-rose-400 transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </button>
                </div>
              </div>

              <!-- File type error -->
              <div id="file-type-error" data-profile-target="fileTypeError" class="hidden p-3 bg-rose-500/10 rounded-lg border border-rose-500/20">
                <p class="text-sm text-rose-300">Only JPG and PNG images are allowed.</p>
              </div>

              <p class="text-xs text-slate-400">Maximum file size: 5MB. Only JPG and PNG formats are accepted.</p>
            </div>
          </div>

          <!-- Hidden field to track avatar removal -->
          <%= form.hidden_field :remove_avatar, value: "0", id: "remove-avatar-field", data: { profile_target: "removeAvatarField" } %>
        </div>

        <!-- Change Password Section -->
        <div class="pt-4 mt-4 border-t border-white/10">
          <h2 class="text-lg font-medium text-white mb-3">Change Password</h2>
          
          <div class="space-y-1">
            <%= form.label :current_password, "Current Password", class: "block text-sm font-medium text-slate-200" %>
            <div class="relative">
              <%= form.password_field :current_password, 
                    data: { action: "input->profile#checkCurrentPassword", profile_target: "currentPassword" },
                    class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 pr-10 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm", 
                    placeholder: "Enter current password to change" %>
              <button type="button"
                      data-action="click->profile#toggleCurrentPasswordVisibility"
                      data-profile-target="toggleCurrentButton"
                      class="absolute right-2 top-1/2 -translate-y-1/2 p-1 text-slate-400 hover:text-slate-200 focus:outline-none focus:text-slate-200 transition"
                      aria-label="Toggle password visibility">
                <svg data-profile-target="eyeCurrentIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <svg data-profile-target="eyeSlashCurrentIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                </svg>
              </button>
            </div>
            <p class="text-xs mt-1 text-slate-400" data-profile-target="currentPasswordStatus">Enter your current password to change it</p>
          </div>

          <!-- Collapsible New Password Section -->
          <div data-profile-target="passwordSection" class="mt-3">
            <div data-profile-target="passwordContent" class="space-y-3">
              <div class="space-y-1">
                <%= form.label :password, "New Password", class: "block text-sm font-medium text-slate-200" %>
                <div class="relative">
                  <%= form.password_field :password,
                        autocomplete: "new-password",
                        data: { action: "input->profile#validatePassword blur->profile#validatePassword", profile_target: "password" },
                        class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 pr-10 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm", 
                        placeholder: "Enter new password" %>
                  <button type="button"
                          data-action="click->profile#togglePasswordVisibility"
                          data-profile-target="toggleButton"
                          class="absolute right-2 top-1/2 -translate-y-1/2 p-1 text-slate-400 hover:text-slate-200 focus:outline-none focus:text-slate-200 transition"
                          aria-label="Toggle password visibility">
                    <svg data-profile-target="eyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    <svg data-profile-target="eyeSlashIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                    </svg>
                  </button>
                </div>
              </div>
              
              <!-- Password Requirements -->
              <div class="bg-gradient-to-br from-white/10 to-white/5 border border-white/20 rounded-lg p-3 text-xs text-violet-100/90 shadow-inner relative overflow-hidden" data-profile-target="requirements">
                <div class="transition-opacity duration-500" data-profile-target="requirementsList">
                  <p class="font-semibold text-violet-200 text-xs mb-2">Password requirements:</p>
                  <ul class="grid grid-cols-2 gap-x-4 gap-y-1.5 text-xs">
                    <li data-profile-requirement="length" class="flex items-center gap-1.5 transition-all">
                      <svg class="w-3 h-3 text-emerald-400 flex-shrink-0 opacity-0 transition-opacity duration-300" data-profile-checkmark="length" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <svg class="w-3 h-3 text-red-400 flex-shrink-0 opacity-100 transition-opacity duration-300" data-profile-xmark="length" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                      <span class="transition-all duration-300" data-profile-text="length">8+ characters</span>
                    </li>
                    <li data-profile-requirement="lowercase" class="flex items-center gap-1.5 transition-all">
                      <svg class="w-3 h-3 text-emerald-400 flex-shrink-0 opacity-0 transition-opacity duration-300" data-profile-checkmark="lowercase" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <svg class="w-3 h-3 text-red-400 flex-shrink-0 opacity-100 transition-opacity duration-300" data-profile-xmark="lowercase" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                      <span class="transition-all duration-300" data-profile-text="lowercase">Lowercase letter</span>
                    </li>
                    <li data-profile-requirement="uppercase" class="flex items-center gap-1.5 transition-all">
                      <svg class="w-3 h-3 text-emerald-400 flex-shrink-0 opacity-0 transition-opacity duration-300" data-profile-checkmark="uppercase" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <svg class="w-3 h-3 text-red-400 flex-shrink-0 opacity-100 transition-opacity duration-300" data-profile-xmark="uppercase" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                      <span class="transition-all duration-300" data-profile-text="uppercase">Uppercase letter</span>
                    </li>
                    <li data-profile-requirement="nonAlpha" class="flex items-center gap-1.5 transition-all">
                      <svg class="w-3 h-3 text-emerald-400 flex-shrink-0 opacity-0 transition-opacity duration-300" data-profile-checkmark="nonAlpha" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <svg class="w-3 h-3 text-red-400 flex-shrink-0 opacity-100 transition-opacity duration-300" data-profile-xmark="nonAlpha" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                      <span class="transition-all duration-300" data-profile-text="nonAlpha">Number or symbol</span>
                    </li>
                  </ul>
                </div>
                <div class="absolute inset-0 flex items-center justify-center opacity-0 transition-opacity duration-500 pointer-events-none" data-profile-target="requirementsCheck">
                  <div class="rounded-lg border border-emerald-500/50 bg-emerald-500/10 p-2">
                    <svg class="w-8 h-8 text-emerald-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                </div>
              </div>

              <div class="space-y-1">
                <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-slate-200" %>
                <div class="relative">
                  <%= form.password_field :password_confirmation,
                        autocomplete: "new-password",
                        data: { action: "input->profile#validateConfirmation blur->profile#validateConfirmation", profile_target: "confirmation" },
                        class: "block w-full rounded-md border border-white/20 bg-white/10 px-3 py-2 pr-10 text-sm text-slate-100 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-violet-400/70 focus:border-transparent transition shadow-sm", 
                        placeholder: "Confirm new password" %>
                  <button type="button"
                          data-action="click->profile#toggleConfirmationVisibility"
                          data-profile-target="toggleConfirmationButton"
                          class="absolute right-2 top-1/2 -translate-y-1/2 p-1 text-slate-400 hover:text-slate-200 focus:outline-none focus:text-slate-200 transition"
                          aria-label="Toggle password visibility">
                    <svg data-profile-target="eyeConfirmationIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    <svg data-profile-target="eyeSlashConfirmationIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="flex gap-3 pt-3">
          <%= form.submit "Update Profile", class: "flex-1 inline-flex items-center justify-center rounded-md bg-violet-600/90 px-4 py-2.5 text-sm font-semibold text-white shadow-md hover:bg-violet-500/90 transition cursor-pointer" %>
          <%= link_to "Cancel", student_path, class: "flex-1 inline-flex items-center justify-center rounded-md border border-white/20 px-4 py-2.5 text-sm text-slate-100 hover:bg-white/5 transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

