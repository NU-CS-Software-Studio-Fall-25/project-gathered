<div class="h-full overflow-y-auto bg-gradient-to-br from-primary-900 via-secondary-900 to-tertiary-800 text-slate-100">
  <div class="container mx-auto px-4 pt-20 pb-10">
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-white mb-2">My Calendar</h1>
      <p class="text-slate-300">View all your study group sessions</p>
    </div>

    <div class="max-w-6xl mx-auto relative">
      <!-- Popup for study group details -->
      <div id="calendar-popup" class="hidden absolute w-80 bg-gradient-to-br from-primary-900/95 via-secondary-900/95 to-tertiary-800/95 backdrop-blur-xl border border-white/20 rounded-xl shadow-2xl p-4 z-50 transition-all duration-200">
        <button id="close-popup" class="absolute top-2 right-2 text-white/70 hover:text-white transition">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
        <div id="popup-content"></div>
      </div>

      <div class="rounded-2xl border border-white/15 bg-white/10 backdrop-blur-2xl shadow-2xl p-6" data-controller="calendar">
        <%= month_calendar(events: @study_groups, attribute: :start_time) do |date, study_groups| %>
          <div class="text-sm font-medium text-white/90 mb-1 p-1" data-calendar-target="dayNumber" data-date="<%= date.to_date.iso8601 %>"><%= date.day %></div>
          <div class="flex flex-col gap-0.5 overflow-y-auto max-h-[85px] scrollbar-thin scrollbar-thumb-primary-600/50 scrollbar-track-transparent">
            <% study_groups.each do |study_group| %>
              <a href="#" 
                 class="flex items-center gap-1 px-1.5 py-0.5 bg-primary-600/70 border-l-[3px] border-primary-600 rounded-[3px] text-xs text-white no-underline transition h-5 min-h-5 max-h-5 shrink-0 overflow-hidden hover:bg-primary-600/90 hover:translate-x-0.5" 
                 data-study-group-id="<%= study_group.group_id %>"
                 data-study-group-topic="<%= study_group.topic %>"
                 data-study-group-course="<%= study_group.course.course_name %>"
                 data-study-group-location="<%= study_group.location %>"
                 data-study-group-start="<%= study_group.start_time.strftime('%B %d, %Y at %l:%M %p') %>"
                 data-study-group-end="<%= study_group.end_time.strftime('%l:%M %p') %>"
                 data-study-group-description="<%= study_group.description %>"
                 data-study-group-creator="<%= study_group.creator.name %>"
                 data-study-group-url="<%= study_group_path(study_group) %>"
                 data-action="click->calendar#showDetails">
                <span class="font-semibold text-white/95 shrink-0 whitespace-nowrap"><%= study_group.start_time.strftime("%l:%M%p").strip %></span>
                <span class="text-white/90 overflow-hidden text-ellipsis whitespace-nowrap flex-1 min-w-0"><%= study_group.topic %></span>
              </a>
            <% end %>
          </div>
        <% end %>
      </div>

      <% if @study_groups.empty? %>
        <div class="mt-6 text-center">
          <div class="rounded-lg border border-white/10 bg-white/5 p-8">
            <div class="text-4xl mb-2">ğŸ“†</div>
            <p class="text-slate-300 mb-4">No study groups scheduled this month.</p>
            <%= link_to "Browse Courses", courses_path, class: "inline-flex items-center justify-center rounded-md bg-tertiary-600/90 px-4 py-2 text-sm font-medium text-white hover:bg-tertiary-500/90 transition" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
