<div class="min-h-screen bg-gradient-to-br from-purple-900 via-indigo-900 to-violet-800 text-slate-100">
  <div class="container mx-auto px-4 pt-20 pb-10">
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-white mb-2">My Calendar</h1>
      <p class="text-slate-300">View your upcoming study group sessions</p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="rounded-2xl border border-white/15 bg-white/10 backdrop-blur-2xl shadow-2xl p-6" data-controller="calendar">
        <%= month_calendar(events: @study_groups, attribute: :start_time) do |date, study_groups| %>
          <div class="calendar-day-number"><%= date.day %></div>
          <div class="calendar-events">
            <% study_groups.each do |study_group| %>
              <%= link_to study_group_path(study_group), class: "calendar-event" do %>
                <span class="event-time"><%= study_group.start_time.strftime("%l:%M%p").strip %></span>
                <span class="event-title"><%= study_group.topic %></span>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>

      <% if @study_groups.empty? %>
        <div class="mt-6 text-center">
          <div class="rounded-lg border border-white/10 bg-white/5 p-8">
            <div class="text-4xl mb-2">ðŸ“†</div>
            <p class="text-slate-300 mb-4">No study groups scheduled this month.</p>
            <%= link_to "Browse Courses", courses_path, class: "inline-flex items-center justify-center rounded-md bg-violet-600/90 px-4 py-2 text-sm font-medium text-white hover:bg-violet-500/90 transition" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
